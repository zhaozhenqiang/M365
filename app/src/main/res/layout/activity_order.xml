<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/basebackground"
    android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/distance_max"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:paddingTop="@dimen/distance_max"
            android:background="@color/titlecolor"  >

            <ImageView
                android:id="@+id/all"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:contentDescription="@string/desc_blank"
                android:gravity="center"
                android:src="@drawable/reservation_l_02"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_max" >
            </ImageView>

            <ImageView
                android:id="@+id/assigmenting"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:contentDescription="@string/desc_blank"
                android:gravity="center"
                android:src="@drawable/reservation_l_06"
                android:textSize="@dimen/text_size_max" >
            </ImageView>

            <ImageView
                android:id="@+id/assigmented"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:contentDescription="@string/desc_blank"
                android:gravity="center"
                android:src="@drawable/reservation_l_07"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_max" >
            </ImageView>
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:background="@color/basebackground" >

        <LinearLayout
            android:id="@+id/total"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <zhongxin.m365.views.XListView
                android:id="@+id/orderlistview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/basebackground"
                android:divider="@color/basebackground"
                android:dividerHeight="@dimen/distance_huge"
                android:paddingBottom="10dp"
                android:scrollbars="none" >
            </zhongxin.m365.views.XListView>
        </LinearLayout>

        <TextView
            android:id="@+id/startorder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_margin="10dp"
            android:background="@drawable/btnstylemain"
            android:gravity="center"
            android:padding="10dp"
            android:text="@string/reservation"
            android:textColor="#ffffff"
            android:textSize="22sp" />
    </FrameLayout>

</LinearLayout>