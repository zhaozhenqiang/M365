<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/basebackground"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/distance_huge"
        android:layout_marginRight="@dimen/distance_huge"
        android:background="@color/basebackground"
        android:orientation="vertical" >

        <!-- 会员卡号手机号 -->

        <EditText
            android:id="@+id/number_id"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="@dimen/distance_huge"
            android:background="@drawable/btnstylewhite"
            android:hint="请输入会员卡号/手机号"
            android:paddingBottom="@dimen/distance_max"
            android:paddingLeft="@dimen/distance_huge"
            android:paddingTop="@dimen/distance_max"
            android:textColor="@color/TextColordark"
            android:textSize="@dimen/text_size_max" />

        <EditText
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="@dimen/distance_huge"
            android:background="@drawable/btnstylewhite"
            android:hint="会员名称"
            android:editable="false"
            android:paddingBottom="@dimen/distance_max"
            android:paddingLeft="@dimen/distance_huge"
            android:paddingTop="@dimen/distance_max"
            android:textColor="@color/TextColordark"
            android:textSize="@dimen/text_size_max" />

        <LinearLayout
            android:id="@+id/selectnumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/distance_huge"
            android:background="@drawable/btnstylewhite"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingTop="@dimen/distance_huge" >

            <!-- cardnum -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                            android:paddingBottom="@dimen/distance_huge"
                
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/numbertype_view"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/distance_huge"
                    android:layout_weight="1"
                    android:text="请选择车牌号"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/text_size_max" />

                <ImageView
                    android:id="@+id/arror"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="@dimen/distance_huge"
                    android:background="@drawable/arrow_d" />
            </LinearLayout>
            <!-- 有无限类型选项 -->
            
                        <ListView
                android:id="@+id/number_listview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/distance_max"
                android:layout_marginLeft="@dimen/distance_max"
                android:layout_marginRight="@dimen/distance_max"
                android:divider="@null"
                android:visibility="gone" >
            </ListView>
        </LinearLayout>
        <!-- 标记1 -->
        <!-- 优惠券个数栏add_favorable_3 -->
        <EditText
            android:id="@+id/input_card"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="@dimen/distance_huge"
            android:background="@drawable/btnstylewhite"
            android:hint="请输入车牌号"
            android:paddingBottom="@dimen/distance_max"
            android:paddingLeft="@dimen/distance_huge"
            android:paddingTop="@dimen/distance_max"
            android:textColor="@color/TextColordark"
            android:textSize="@dimen/text_size_max"
            android:visibility="gone" />
        <!-- 优惠劵原价 -->


        <!-- 选择门店 -->

        <LinearLayout
            android:id="@+id/selecttime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/distance_huge"
            android:background="@drawable/btnstylewhite"
            android:gravity="center_vertical"
            android:paddingBottom="@dimen/distance_huge"
            android:paddingTop="@dimen/distance_huge" >

            <TextView
                android:id="@+id/time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/distance_huge"
                android:layout_weight="1"
                android:text="请选择时间"
                android:textColor="@color/gray"
                android:textSize="@dimen/text_size_max" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/distance_huge"
                android:background="@drawable/arrow_r" />
        </LinearLayout>

        <!-- 选择门店 -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/distance_huge"
            android:background="@drawable/btnstylewhite"
            android:gravity="center_vertical"
            android:paddingBottom="@dimen/distance_huge"
            android:paddingTop="@dimen/distance_huge" >

            <TextView
                android:id="@+id/selectserve"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/distance_huge"
                android:layout_weight="1"
                android:text="选择服务"
                android:singleLine="true"
                android:textColor="@color/gray"
                android:textSize="@dimen/text_size_max" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/distance_huge"
                android:background="@drawable/arrow_r" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/selectstore"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/distance_huge"
            android:background="@drawable/btnstylewhite"
            android:gravity="center_vertical"
            android:paddingBottom="@dimen/distance_huge"
            android:paddingTop="@dimen/distance_huge" >

            <EditText
                android:id="@+id/orderprice"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/distance_huge"
                android:layout_weight="1"
                android:background="#0000"
                android:hint="请输入定金金额"
                android:inputType="number"
                android:textColor="@color/TextColordark"
                android:textSize="@dimen/text_size_max" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/distance_huge"
                android:text="元" />
        </LinearLayout>

        <Button
            android:id="@+id/addorder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:background="@drawable/btnstyleblue"
            android:gravity="center"
            android:padding="10dp"
            android:text="完  成"
            android:textColor="@color/white"
            android:textSize="22sp" />
    </LinearLayout>

</LinearLayout>