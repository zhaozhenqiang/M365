<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".LoginActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="@color/titlecolor"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center" >

            <ImageView
                android:id="@+id/image"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/login_01" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/login_02" />

            <zhongxin.m365.views.ClearableEditText
                android:id="@+id/loginname_login"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableRight="@drawable/delete"  
                android:background="@null"
                android:hint="@string/phonehint_login"
                android:inputType="number"
                android:textSize="16sp" />
        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/distance_float"
            android:layout_marginLeft="@dimen/distance_superhuge"
            android:background="@color/basebackground" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/login_03" />

            <zhongxin.m365.views.ClearableEditText
                android:id="@+id/loginpasd_login"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableRight="@drawable/delete"  
                android:background="@null"
                android:hint="@string/password_login"
                android:inputType="textPassword"
                android:textSize="16sp" />
        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/distance_float"
            android:layout_marginBottom="@dimen/distance_superhuge"
            android:layout_marginLeft="@dimen/distance_superhuge"
            android:background="@color/basebackground" />
    </LinearLayout>

    <Button
        android:id="@+id/loginbtn_loginbtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/distance_huge"
        android:layout_marginRight="@dimen/distance_huge"
        android:layout_marginTop="@dimen/distance_superhuge"
        android:background="@drawable/btnstyleblue"
        android:gravity="center"
        android:text="登录"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_super_huge" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="@dimen/distance_huge"
        android:layout_marginRight="@dimen/distance_huge"
        android:layout_marginTop="@dimen/distance_superhuge"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/forgetpasd_login"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_marginRight="@dimen/distance_huge"
            android:layout_weight="1"
            android:gravity="center_vertical|left"
            android:text="忘记密码？"
            android:textColor="@color/yellow"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_weight="2"
        android:gravity="center|bottom"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/protocol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:paddingRight="10dp"
            android:text="用户协议"
            android:textColor="@color/TextColordark"
            android:textSize="@dimen/text_size_max" />

        <TextView
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:background="@color/TextColordark"
            android:gravity="center"
            android:paddingBottom="2dp"
            android:paddingRight="10dp"
            android:paddingTop="2dp"
            android:textSize="@dimen/text_size_mid" />

        <TextView
            android:id="@+id/privacy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="left"
            android:paddingLeft="10dp"
            android:text="隐私条款"
            android:textColor="@color/TextColordark"
            android:textSize="@dimen/text_size_max" />
    </LinearLayout>

</LinearLayout>