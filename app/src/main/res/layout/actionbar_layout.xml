<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/actionbarLayoutId"
    android:layout_width="fill_parent"
    android:layout_height="@dimen/height_title"
    android:background="@mipmap/title_bark"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:gravity="center_vertical" >

    <Button
        android:id="@+id/rightbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/distance_max"
        android:background="@null"
        android:onClick="onClick"
        android:textColor="@color/gray"
        android:textSize="@dimen/text_size_mid"
        android:visibility="invisible"/>

    <ImageView
        android:id="@+id/righticon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:padding="@dimen/distance_max"
        android:src="@mipmap/my_set"
        android:layout_marginRight="@dimen/distance_huge"
        android:contentDescription="@string/desc_blank"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/basetitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:onClick="onClick"
        android:singleLine="true"
        android:textColor="@color/white"
        android:padding="12dp"
        android:textSize="@dimen/text_size_huge" />

    <ImageView
        android:id="@+id/baseback"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:padding="15dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:src="@mipmap/title_left"
        android:onClick="onClick" />

</RelativeLayout>