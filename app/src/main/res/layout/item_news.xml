<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btnstylewhite"
        android:orientation="vertical"
        android:paddingLeft="@dimen/distance_huge"
        android:paddingRight="@dimen/distance_huge" >
       <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal" >
            <ImageView
                android:id="@+id/news_flag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/message_box_02"
                android:paddingRight="@dimen/distance_huge"
                android:layout_marginRight="@dimen/distance_huge"
                android:scaleType="fitCenter" />
            <TextView
                android:id="@+id/news_content"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="请进行活动审核"
                android:maxLines="1"
                android:ellipsize="end"
                android:textColor="@color/TextColordarker"
                android:textSize="@dimen/text_size_max" />
            <TextView
                android:id="@+id/news_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="right"
                android:paddingRight="3dp"
                android:text="2015-05-07"
                android:textColor="@color/TextColordarker"
                android:textSize="@dimen/text_size_max" />
        </LinearLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/distance_float"
            android:background="@color/basebackground" />
    </LinearLayout>
</LinearLayout>