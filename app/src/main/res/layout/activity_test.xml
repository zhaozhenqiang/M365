<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity" >

    <Button
        android:id="@+id/click_camera"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="49.0dp"
        android:text="zhaozhaopian" />
    <Button
        android:id="@+id/click_local"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/click_camera"
        android:text="clickme_local" />

    <ImageView
        android:id="@+id/image"
        android:layout_below="@+id/click_local"
        android:layout_width="180.0dp"
        android:layout_height="180.0dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:contentDescription="@string/hello_world"
        android:layout_marginTop="23.0dp"
        />

</RelativeLayout>